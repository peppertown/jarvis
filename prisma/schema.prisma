generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nickname  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Session Session[]
  Message Message[]
  Insight Insight[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int?
  title     String?
  createdAt DateTime @default(now())

  user     User?     @relation(fields: [userId], references: [id])
  messages Message[]
  insights Insight[]

  @@index([userId, createdAt])
}

model Message {
  id        Int    @id @default(autoincrement())
  sessionId Int
  userId    Int?
  role      String
  content   String @db.LongText

  task    String?
  topics  Json?

  // 성능 분석용
  model     String?
  latencyMs Int?
  tokensIn  Int?
  tokensOut Int?
  costUsd   Decimal? @db.Decimal(10, 6)

  createdAt DateTime @default(now())

  session  Session   @relation(fields: [sessionId], references: [id])
  user     User?     @relation(fields: [userId], references: [id])
  insights Insight[]

  @@index([sessionId, createdAt])
  @@index([userId, createdAt])
}

model Insight {
  id        Int      @id @default(autoincrement())
  userId    Int
  sessionId Int?     // 어느 세션에서 추출되었는지
  messageId Int?     // 정확히 어떤 메시지에서 나왔는지
  
  content   String   @db.Text
  category  String?  // 선호도, 목표, 제약사항, 습관 등
  source    String?  // 어떤 AI 모델에서 추출했는지
  
  createdAt DateTime @default(now())
  
  user    User     @relation(fields: [userId], references: [id])
  session Session? @relation(fields: [sessionId], references: [id])
  message Message? @relation(fields: [messageId], references: [id])
  
  @@unique([userId, content(length: 500)]) // 중복 방지 (MySQL TEXT 제한)
  @@index([userId, category])
  @@index([sessionId])
}
