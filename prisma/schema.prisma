generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nickname  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Session Session[]
  Message Message[]
  Insight Insight[]
  Persona Persona?
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int?
  title     String?
  createdAt DateTime @default(now())

  user     User?     @relation(fields: [userId], references: [id])
  messages Message[]
  insights Insight[]

  @@index([userId, createdAt])
}

model Message {
  id        Int    @id @default(autoincrement())
  sessionId Int
  userId    Int?
  role      String
  content   String @db.LongText

  task    String?
  topics  Json?

  // 성능 분석용
  model     String?
  latencyMs Int?
  tokensIn  Int?
  tokensOut Int?
  costUsd   Decimal? @db.Decimal(10, 6)

  createdAt DateTime @default(now())

  session  Session   @relation(fields: [sessionId], references: [id])
  user     User?     @relation(fields: [userId], references: [id])
  insights Insight[]

  @@index([sessionId, createdAt])
  @@index([userId, createdAt])
}

model Insight {
  id        Int      @id @default(autoincrement())
  userId    Int
  sessionId Int?     // 어느 세션에서 추출되었는지
  messageId Int?     // 정확히 어떤 메시지에서 나왔는지
  
  content   String   @db.Text
  category  String?  // 선호도, 목표, 제약사항, 습관 등
  source    String?  // 어떤 AI 모델에서 추출했는지
  
  createdAt DateTime @default(now())
  
  user    User     @relation(fields: [userId], references: [id])
  session Session? @relation(fields: [sessionId], references: [id])
  message Message? @relation(fields: [messageId], references: [id])
  
  @@unique([userId, content(length: 500)]) // 중복 방지 (MySQL TEXT 제한)
  @@index([userId, category])
  @@index([sessionId])
}

model Persona {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique  // 유저당 1개의 페르소나
  
  // 메인 페르소나 데이터 (JSON)
  personality   String?          // "스타일 중시하는 문화 애호가"
  interests     Json?            // ["게임", "독서", "프로그래밍"] 
  skills        Json?            // {"TS": "중급", "React": "초보"}
  preferences   Json?            // ["스타일리쉬한 디자인", "함수형 컴포넌트"]
  traits        Json?            // ["학습욕구 높음", "내향적"]
  
  summary       String? @db.Text // AI가 생성한 전체 요약
  
  version       Int      @default(1)  // 업데이트 횟수
  lastUpdated   DateTime @updatedAt
  createdAt     DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id])
  
  @@index([userId])
}
